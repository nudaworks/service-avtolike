<!-- SECTION HEAD -->
<section class="s-head">

     <div class="s-head__container-1 container clearfix">
          <div class="logo">
               Немецкий чип-тюннинг с установкой и гарантией
          </div>
          <div class="contacts">
               <div class="contacts__map">
                    <div class="contacts__map-address">
                         Москва, Боенский проезд 11с1
                    </div>
                    <a href="#" class="contacts__map-link">
                         Посмотреть на карте
                    </a>
               </div>
               <div class="contacts__phone">
                    <div class="contacts__digits">
                         +8 495 93 33 11
                    </div>
                    <a href="#" class="contacts__phone-link" data-action="build-modal"
                       data-modal-heading="Заказ обратного звонка" data-modal-inputs="name,phone">
                         Заказать звонок
                    </a>
               </div>
          </div>
     </div>

     <div class="s-head__container-2 container">
          <div class="descriptor">
               <div class="descriptor__heading">
                    Чип-тюнинг с гарантией результата
               </div>
               <div class="descriptor__text">
                    Увеличим мощность вашего автомобиля до 30% менее чем за час или вернем деньги
               </div>
          </div>
          <div class="capture">
               <form class="capture__form js-form">
                    <div class="capture__heading js-heading">
                         Заявка на получение скидки 10%
                         <span class="capture__heading-ext"> + светодиоды в габариты в подарок!</span>
                    </div>
                    <div class="capture__inputs">
                         <input class="capture__input" name="name" type="text" placeholder="Имя" />
                         <input class="capture__input" name="avto" type="text" placeholder="Авто" />
                         <input class="capture__input" name="phone" type="text" placeholder="Телефон" />
                    </div>
                    <div class="capture__controls">
                         <button class="capture__submit yellow" type="button" data-action="validate-form">
                              Оставить заявку
                         </button>
                    </div>
               </form>
          </div>
     </div>
</section>
          