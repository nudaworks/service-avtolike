.s-map
  overflow hidden
  height 27.5em

  &__map
    width 100%
    height 27.5em
    position absolute

.pointer
  position relative
  margin 0 auto
  width 73.125em
  height 0

  &__box
    margin-top 6.25em
    position absolute
    background rgba(255,255,255, .7)
    padding 1.875em 2.5em
    width 36.56em
    color #444

    &:hover
      background rgba(255,255,255, 1)

  &__title
    font-family GothamProLight
    font-size 1.56em

  &__addres
    font-family GothamProMedium
    font-size 1em
    padding-top .875em

  &__hr
    &--1
      width 1.875em
      height .125em
      border-width .125em
      color #3399ff
      background #3399ff
      border-radius .125em
      margin .875em 0
    &--2
      height .125em
      width 100%
      border-width .0125em
      color #e5e5e5
      background #e5e5e5
      margin 1.125em 0

  &__text
    font-size .9375em

  &__phone
    font-family GothamProMedium
    font-size 1.05em
    padding-left 3.125em
    background url("../img/xenon/phone-ico.jpg") no-repeat
    float left
    padding-top .5em
    height 2.5em

  &__button-wrap
    float right

  &__button
    width 12.5em
    padding .75em 0
    font-family GothamProBold
    font-size .9375em


.summon
  display: none;
  cursor: pointer;
  margin: 2.5em 0 0 2.5em;
  position: absolute;
  background: rgba(255,255,255, .8) url('data:image/png;base64,') center center no-repeat;
  background-size: 60%;
  width: 4.2em;
  height: 4.2em;
  border: .0125em solid rgba(88,88,88, .5);
  border-radius: 50%;
  animation:
  phone-ring 5s infinite,
  phone-bg-change 7s infinite;

  &:hover
    animation-play-state paused

  &--active
    animation emerge 1.5s
    display block


@keyframes phone-ring
  0%
    transform rotate(5deg)

  2%
    transform rotate(-5deg)

  4%
    transform rotate(5deg)

  6%
    transform rotate(-5deg)

  8%
    transform rotate(5deg)

  10%
    transform rotate(-5deg)

@keyframes phone-bg-change
  0%
    background-color rgba(255,255,255, .8)

  50%
    background-color rgba(255,255,255, .1)

  100%
    background-color rgba(255,255,255, .8)


@media all and (max-width: 1080px)
  .s-map
    height 28em

  &_container
    width 130%

  &__map
    height 34em

  .pointer
    &__box
      margin 0
      height 28em
      width 23em

    &__phone
      float: none;

    &__button-wrap
      margin-top 1em
      float none

  .s-map--summoned
    .pointer
      &__box
        margin-left 0

@media all and (max-width: 800px)
  .pointer
    &__box
      margin-left -28em

    &__text
      line-height: 1.2em;

    &__button-wrap
      font-size 1.1em

  &__summon
    display block
    opacity 1
    transition-duration 1.5s

    &--hidden
      opacity: 0;
      transition-duration: .5s

