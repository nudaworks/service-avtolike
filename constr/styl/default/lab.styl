.s-lab
  padding 3em 0
  background url("../img/xenon/disassembled-car-right.png") right 120px no-repeat

  &__container
    padding 2em 0

.consultation
  float left
  width 66%
  padding 3em
  padding-bottom 2.5em
  background url("../img/xenon/gears.png") 405px 75px no-repeat #f6f6f8

  &__heading
    font-size 2em

  &__subheading
    margin-bottom 2em
    color #888

  &__assurance
    margin-top 2em
    padding-left 3.75em
    padding-top .4em
    min-height 3.4em
    max-width 33.75em
    background url("../img/xenon/exclaim.png") no-repeat
    font-style italic

  &__input
    padding .875em 0 .875em 3.125em
    margin-right 1.375em
    margin-bottom 1.25em
    font-size 1em
    width 45%

    &.name
      background url("../img/xenon/small-icons.png") 18px 14px no-repeat #fff

    &.phone
      background url("../img/xenon/small-icons.png") 18px -76px no-repeat #fff

  &__submit
    font-size 1.0625em /* 17px */
    width 45%
    padding .764em


.callaway
  float right
  width 33%
  height 100%
  color #fff
  min-width 22.5em


.we-call
  height 11.1em
  padding 2.19em 2.8125em
  margin-bottom .8em
  background #68687f

  &__heading
    font-size 1.25em /* 20px */
    margin-bottom 1.05em

  &__text
    font-size .8125em
    color #c6c6d7

.me-call
  height 11.1em
  padding 2.19em 2.8125em
  background #6f777e

  &__heading
    font-size 1.25em /* 20px */
    margin-bottom 1.05em

  &__phone
    font-size 1.875em




.about-lab
  position relative
  padding 4em 3.125em 0

  &__heading
    font-size 2em

  &__hr
    height .125em
    border-width .125em
    background #66b2ff
    color #66b2ff
    width 2em
    border-radius .125em
    margin 1.3em 0

  &__text
    font-family GothamProLight
    padding-bottom 1.25em
    font-size 1em
    width 27em

  &__gallery
    margin-bottom 2.3em

  &__preview
    position relative
    display inline-block
    width 12.5em
    height 9.062em

  &__image
    width 100%

  &__loupe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background url("../img/xenon/loupe-blue.png") center center no-repeat


  &__button
    width 13.75em
    font-size 1em
    border-radius 1.5em
    border .125em solid #d2dae2

.sertificats
  padding 2em 3.125em

  &__heading
    font-size 2em
    padding 1em 0

  .crs
    &__wrap
      overflow hidden

    &__content
      width 9999px

    &__item
      display block
      float left
      text-align center

    &__positions
      padding 1.5em 0

      &-wrap
        margin 0 auto

      &-content
        width 9999px

    &__position
      display inline-block
      width 1.6em
      height 1.6em
      background-color #007fff
      border-radius 50%
      margin 0 .3em
      cursor pointer
      opacity 1

      &--active
        width 1.6em
        height 1.6em
        background-color #ffcc00

      &--outscoped
        animation vanish .5s
        animation-fill-mode forwards

@media all and (max-width 1170px)
  .s-lab
    background #fff

    &__container
      width 100%

  .about-lab
    &__description
      float left
      padding-right 4em




@media all and (max-width 1080px)
  .s-lab
    .crs
      &__item
        width 10em

  .consultation
    width 60%

    &__submit
      width 95%

  .callaway
    width 40%


  .we-call
    margin-bottom 0
  .me-call,
  .we-call
    height 11.47em




@media all and (max-width 990px)
  .consultation
    width 55%

    &__heading
      font-size 1.7em

    &__input
      width 95%

  .callaway
    width 45%

  .me-call,.we-call
    height 13.45em


@media all and (max-width 870px)
  .consultation
    width 100%

    &__input
      width 45%

    &__submit
      width 45%

  .callaway
    width 100%

  .me-call,
  .we-call
    width 50%
    float left
    height auto
    min-height 11em


@media all and (max-width 740px)
  .me-call
    &__phone
      font-size 1.4em


@media all and (max-width 675px)
  .consultation
    &__submit
      width 95%


@media all and (max-width 615px)
  .callaway
    min-width auto

  .me-call,
  .we-call
    width 100%
    min-height auto
    float none

  .about-lab
    padding 2.5em

    &__description
      padding 0

    &__text
      width 100%

    &__image
      margin .3em 0


@media all and (max-width 600px)
  .consultation
    padding 2.5em

    &__submit
    &__input
      width 100%

  .sertificats
    &__heading
      text-align center


@media all and (max-width 480px)
  .about-lab
    &__preview
      width 100%


@media all and (max-width 360px)
  .consultation
    padding 2em

  .me-call,
  .we-call
    padding 2em 2em 3em

  .about-lab
    padding 2em