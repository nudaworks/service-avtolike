.s-install
  &__container
    width 73.125em

  &__heading
    padding 1.59em 0
    font-family GothamProLight
    font-size 2.75em
    text-align center

  .crs
    &__positions
      display none
      padding 1.5em 0

      &-wrap
        margin 0 auto

      &-content
        width 9999px

    &__position
      display inline-block
      width 1.6em
      height 1.6em
      background-color #007fff
      border-radius 50%
      margin 0 .3em
      cursor pointer
      opacity 1

      &--active
        width 1.6em
        height 1.6em
        background-color #ffcc00

      &--outscoped
        animation vanish .5s
        animation-fill-mode forwards


.colle-card
  width 25%
  height 28em
  margin -.0625em 0 0 -.0625em
  text-align center
  float left

  &__front
    padding 1em 11.5%
    background #fff
    border 0.0625em solid #e5e5e5

    &-heading
      margin-top 2em
      font-size .9375em // 15px
      min-height 3.466em

    &-image
      margin 2em auto
      border-radius 50%
      width 8.125em
      height 130px
      border .5em solid rgb(238, 238, 238)
      background url("../img/xenon/install-icons-q40.jpg") no-repeat

      &--1
        background-position -10px 0
      &--2
        background-position -165px -5px
      &--3
        background-position -310px 0
      &--4
        background-position -470px -5px
      &--5
        background-position -15px -160px
      &--6
        background-position -165px -150px
      &--7
        background-position -315px -150px
      &--8
        background-position -470px -160px
      &--9
        background-position -15px -293px
      &--10
        background-position -150px -298px
      &--11
        background-position -315px -305px
      &--12
        background-position -470px -305px
      &--13
        background-position -20px -455px
      &--14
        background-position -150px -460px
      &--15
        background-position -315px -460px
      &--16
        background-position -470px -465px
      &--17
        background-position -20px -605px
      &--18
        background-position -150px -620px

    &-price
      font-family GothamProMedium

    &-button-wrap
      margin 1.25em auto 1em

    &-button
      width 100%
      font-size 1em

    &-info
      font-size 0.8em


  &__back
    padding 1em 15%
    position absolute
    top 0
    background: #007fff

    &-close
      margin 0 auto
      margin-top 25px
      padding-top 2px
      width 50px
      height 50px
      font-family GothamProLight
      font-size 30px
      text-align center
      color #fff
      border-radius 35px
      border 1px solid #fff
      cursor pointer
      background url(close_icon_slim_base64) center center no-repeat
      background-size 80%

    &-heading
      margin 40px 0 30px 0
      font-family GothamProMedium
      font-size 18px
      color #fff

    &-input
      margin-bottom 10px
      padding-left 18px
      width 100%

    &-submit
      margin-bottom 30px
      width 100%
      font-size: 1em;
      padding: .8em 0;


.show-more
  padding: 2em 0;
  text-align center

  &__button
    font-size 1.05em
    padding .8em 2em


@media all and (max-width: 1170px)
  .s-install
    &__container
      width 100%

@media all and (max-width: 1020px)
  .colle-card
    width 33.333%

@media all and (max-width: 800px)
  .s-install
    &__heading
      padding 2em 1em 1.5em
      font-size 2.5em

    .crs
      &__content
        width 100%

    .colle-card
      height auto
      width 100%

      &__front
        position relative
        padding 2em 1em 1em 16em

        &-heading
          margin-top 1em
          font-size 1.1em
          padding 0 1em

        &-image
          position absolute
          top .5em
          left 5%


        &-price
          font-size 1.1em

        &-button-wrap
          width 250px
          font-size 1.1em
          padding 0

        &-info
          display none

      &__back
        padding 2.5em 10% 1em 8em

        &-close
          position absolute
          left 1em
          top 25%

        &-heading
          font-size 1.1em
          margin-top 0

        &-input
          display inline-block
          width 48%
          margin .5em 1%

        &-input:first-child
          width 49%
          margin-right 2%

        &-submit
          font-size 1.1
          padding .7em 0
          margin 0 1%
          width 98.2%

@media all and (max-width: 580px)
  .s-install
    &__container
      padding 2.5em 0

    &__heading
      font-size 1.8em

    .colle-card
      &__front
        padding 2em 1em 1em 12em
        &-image
          left 1.5em
        &-button-wrap
          width 10em
    .crs
      &__item
        margin 0

@media all and (max-width: 480px)
  .s-install
    .crs
      &__content
        width 9999px

      &__positions
        display block

    .colle-card
      &__front
        padding 2em 0

        &-image
          margin .5em auto
          position static

        &-price
          padding-top 2em

      &__back
        padding 1em 10%

        &-close
          position static

        &-heading
          padding 2em 0
          margin 0

        &-input
          width 100%
          margin 0 1% .8em

    .show-more
      display none
      width 100%




