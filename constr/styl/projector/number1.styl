.s-number1
  height 89.6875em
  background url(../img/projector/projector-bgset-rescaled-q40.jpg) center top no-repeat

  &__heading
    font-size 2.75em // 44px
    padding 1.2em 2em .8em
    font-family GothamProBold
    text-align center

  &__text
    font-family GothamProLight
    max-width 45em
    text-align center
    margin 0 auto
    font-size 1.05em

  &__list
    margin 0 auto
    padding 1em 13.125em 0
    text-align center

  &__item
    display inline-block
    vertical-align top
    margin 4.285em 1em 0
    padding-left 5em
    text-align left
    width 15em
    font-family GothamProLight
    font-size .875em // 14px
    background url(../img/default/default-iconset-04.png) no-repeat

    &--1
      background-position 20px 8px
    &--2
      background-position 20px -169px
    &--3
      background-position 20px -335px
    &--4
      background-position 20px -79px
    &--5
      background-position 20px -256px
    &--6
      background-position 20px -426px

@media all and (max-width: 1170px)
  .s-number1
    background #f2eeef
    height auto

    &__container
      width 100%
      padding 2em 1em 6em

    &__list
      padding 0

@media all and (max-width: 880px)
  .s-number1
    &__heading
      font-size 2em

@media all and (max-width: 560px)
  .s-number1
    &__heading
      font-size 1.6em

    &__list
      padding-top 2em

    &__item
      width 100%
      margin .5em 0
      min-height 4em
      padding-right 2em
      padding-top 1em

      &-content
        display inline-block
        vertical-align middle

@media all and (max-width: 360px)
  .s-number1
    &__heading
      font-size 1.3em